{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":disableDependencyDashboard"],
  "schedule": ["* 0-3 * * 6"],
  "timezone": "Asia/Tokyo",
  "labels": ["dependencies"],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "rangeStrategy": "bump",
  "customManagers": [
    {
      "customType": "jsonata",
      "fileFormat": "yaml",
      "managerFilePatterns": [".github/workflows/*.yml"],
      "matchStrings": [
        "jobs.*.strategy.matrix.platform[label].{\"depName\": $substringBefore(label, \"-\"), \"currentValue\": $substringAfter(label, \"-\")}",
        "jobs.*.strategy.matrix.exclude.platform[label].{\"depName\": $substringBefore(label, \"-\"), \"currentValue\": $substringAfter(label, \"-\")}",
        "jobs.*.strategy.matrix.include.platform[label].{\"depName\": $substringBefore(label, \"-\"), \"currentValue\": $substringAfter(label, \"-\")}"
      ],
      "datasourceTemplate": "github-runners"
    },
    {
      "customType": "jsonata",
      "fileFormat": "yaml",
      "managerFilePatterns": [".github/workflows/*.yml"],
      "matchStrings": ["jobs.*.steps.with[$exists(`postgres-version`)].{\"currentValue\": $string(`postgres-version`)}"],
      "depNameTemplate": "postgres",
      "lookupNameTemplate": "postgres",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["api/scripts/setup-postgres.bash"],
      "matchStrings": ["POSTGRES_IMAGE=.*postgres:(?<currentValue>\\d+\\.\\d+(\\.\\d+)?).*"],
      "depNameTemplate": "postgres",
      "lookupNameTemplate": "postgres",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/(^|/)rust-toolchain\\.toml$/"],
      "matchStrings": ["channel\\s*=\\s*\"(?<currentValue>\\d+\\.\\d+(\\.\\d+)?)\""],
      "depNameTemplate": "rust",
      "lookupNameTemplate": "rust-lang/rust",
      "datasourceTemplate": "github-tags"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["dockerfile"],
      "addLabels": ["docker"]
    },
    {
      "matchManagers": ["github-actions"],
      "addLabels": ["github_actions"]
    },
    {
      "matchManagers": ["npm"],
      "addLabels": ["javascript"]
    },
    {
      "matchManagers": ["cargo"],
      "addLabels": ["rust"]
    },
    {
      "matchDepNames": ["node"],
      "groupName": "node",
      "minimumGroupSize": 2
    },
    {
      "matchDepNames": ["rust"],
      "groupName": "rust",
      "minimumGroupSize": 2
    },
    {
      "matchDepNames": [
        "@apollo/*",
        "apollo-upload-client"
      ],
      "groupName": "apollo"
    },
    {
      "matchDepNames": [
        "async-graphql-axum",
        "axum"
      ],
      "groupName": "axum"
    },
    {
      "matchDepNames": [
        "async-graphql",
        "async-graphql-*"
      ],
      "groupName": "async-graphql"
    },
    {
      "matchDepNames": [
        "@date-fns/*",
        "date-fns"
      ],
      "groupName": "date-fns"
    },
    {
      "matchDepNames": ["@emotion/*"],
      "groupName": "emotion"
    },
    {
      "matchDepNames": ["@graphql-codegen/*"],
      "groupName": "graphql-codegen"
    },
    {
      "matchDepNames": ["icu_*"],
      "groupName": "icu"
    },
    {
      "matchDepNames": ["@mui/*"],
      "groupName": "mui"
    },
    {
      "matchDepNames": [
        "eslint-config-next",
        "next"
      ],
      "groupName": "next"
    },
    {
      "matchDepNames": [
        "sea-query",
        "sea-query-*"
      ],
      "groupName": "sea-query"
    },
    {
      "matchDepNames": ["*"],
      "commitMessageAction": "Bump",
      "commitMessageExtra": "",
      "commitMessageSuffix": "from {{currentVersion}} to {{newVersion}}",
      "commitMessageTopic": "{{depName}}"
    }
  ]
}
